{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<section class="reset-wrapper">
    <h1 class="reset-title">Réinitialiser votre mot de passe</h1>
    <div class="register-wrapper">
        <div class="form-content">
            {{ form_start(resetForm) }}
        
            {{ form_row(resetForm.plainPassword) }}
            <div class="form-content">
                <button class="btn btn-lg">Reset password</button>
            </div>
        
            {{ form_end(resetForm) }}
        </div>
    </div>   
</section>
{% endblock %}