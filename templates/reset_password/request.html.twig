{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}

    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <section class="reset-wrapper">
        <h1 class="reset-title">Réinitialiser votre mot de passe</h1>
        
        <div class="register-wrapper">
            <div class="form-content">
                {{ form_start(requestForm) }}
        
                {{ form_row(requestForm.email, {'label': "Adresse e-mail"}) }}
        
                <div class="form-small">
                    <small>Entrez votre addresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de
                        passe.</small>
                </div>
        
                <div class="form-content">
                    <button class="btn btn-lg">Envoyer</button>
                </div>
        
                {{ form_end(requestForm) }}
            </div>
        </div>
    </section>

{% endblock %}